<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/numOptionsDialogLayout"
    android:layout_width="240dp"
    android:layout_height="175dp" >

    <Button
        android:id="@+id/more"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="More" />

    <EditText
        android:id="@+id/numOptions"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:editable="false"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/less"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numOptions"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Less" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numOptions"
        android:layout_alignBottom="@+id/numOptions"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/numOptions"
        android:text="Cancel" />

    <Button
        android:id="@+id/ok"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numOptions"
        android:layout_alignBottom="@+id/numOptions"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/numOptions"
        android:text="OK" />

</RelativeLayout>